<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.qin.ProfileActivity">

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_height="match_parent">


        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_marginTop="100dp" android:gravity="center">
            <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                      android:layout_weight="1" android:layout_marginLeft="40dp"
                      android:text="用户名:" android:textSize="24sp"></TextView>
            <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                      android:id="@+id/usernameProfile" android:textSize="24sp"
                      android:layout_weight="2"
                      android:focusable="false"></TextView>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_marginTop="20dp" android:gravity="center"
        >
            <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                      android:text="联系方式:" android:textSize="24sp"
                      android:layout_weight="1" android:layout_marginLeft="40dp"></TextView>
            <EditText android:layout_width="0dp" android:layout_height="wrap_content"
                      android:id="@+id/contactProfile" android:textSize="24sp"
                      android:layout_weight="2"></EditText>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_marginTop="20dp" android:gravity="center">
            <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                      android:text="密码:" android:textSize="24sp"
                      android:layout_weight="1" android:layout_marginLeft="40dp"></TextView>
            <EditText android:layout_width="0dp" android:layout_height="wrap_content"
                      android:id="@+id/passwordProfile" android:textSize="24sp"
                      android:layout_weight="2" android:inputType="textPassword"></EditText>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_marginTop="20dp" android:gravity="center">
            <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                      android:text="确认密码:" android:textSize="24sp"
                      android:layout_weight="1" android:layout_marginLeft="40dp"
                      android:id="@+id/repasswordTextView"></TextView>
            <EditText android:layout_width="0dp" android:layout_height="wrap_content"
                      android:inputType="textPassword" android:textSize="24sp"
                      android:layout_weight="2" android:id="@+id/repasswordProfile"></EditText>
        </LinearLayout>
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="保存" android:layout_gravity="center"
                android:id="@+id/saveProfileButton" android:layout_marginTop="30dp"></Button>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
