<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="200dp">
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/titleText" android:text="承基楼5楼学生卡"
              android:textSize="25sp" android:gravity="center"
              android:layout_marginTop="10dp"/>
    <ImageView android:layout_width="200dp" android:layout_height="150dp"
               android:id="@+id/pictureView" android:layout_below="@+id/titleText"
               android:layout_marginTop="10dp" android:src="@mipmap/xiangji"
               android:layout_marginLeft="10dp"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/addressText" android:layout_toRightOf="@+id/pictureView"
              android:layout_below="@+id/titleText" android:text="南校"
              android:layout_marginTop="20dp" android:layout_marginLeft="30dp"
              android:textSize="25sp"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/dateText" android:layout_toRightOf="@+id/pictureView"
              android:layout_below="@+id/addressText" android:text="2020-06-01"
              android:layout_marginTop="10dp" android:layout_marginLeft="30dp"
              android:textSize="25sp"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/detailText" android:layout_marginRight="30dp"
              android:text="详情" android:layout_marginBottom="20dp"
              android:layout_marginTop="10dp" android:layout_marginLeft="20dp"
              android:textSize="25sp" android:layout_alignParentBottom="true"
              android:layout_alignParentRight="true"/>

</RelativeLayout>