<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

    <LinearLayout android:id="@+id/nav"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_alignParentBottom="true">
        <LinearLayout android:layout_width="0dp"
                      android:id="@+id/square"
                      android:layout_height="wrap_content"
                      android:background="#ffffff"
                      android:gravity="center"
                      android:orientation="vertical"
                      android:layout_weight="1">
            <ImageView android:layout_width="40dp"
                       android:layout_height="35dp"
                       android:id="@+id/squareImage"
                       android:src="@mipmap/square_u">
            </ImageView>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/squareText"
                      android:textColor="@color/selector_text_home"
                      android:text="广场">
            </TextView>
        </LinearLayout>
        <LinearLayout android:layout_width="0dp"
                      android:id="@+id/post"
                      android:layout_height="wrap_content"
                      android:background="#ffffff"
                      android:gravity="center"
                      android:orientation="vertical"
                      android:layout_weight="1">
            <ImageView android:layout_width="40dp"
                       android:layout_height="35dp"
                       android:id="@+id/postImage"
                       android:src="@mipmap/post_u">
            </ImageView>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/postText"
                      android:textColor="@color/selector_text_home"
                      android:text="发布">
            </TextView>
        </LinearLayout>
        <LinearLayout android:layout_width="0dp"
                      android:id="@+id/mine"
                      android:layout_height="wrap_content"
                      android:background="#ffffff"
                      android:gravity="center"
                      android:orientation="vertical"
                      android:layout_weight="1">
            <ImageView android:layout_width="40dp"
                       android:layout_height="35dp"
                       android:id="@+id/mineImage"
                       android:src="@mipmap/mine_u">
            </ImageView>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/mineText"
                      android:textColor="@color/selector_text_home"
                      android:text="我的">
            </TextView>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/content"
                    android:layout_above="@+id/nav">
    </RelativeLayout>
</RelativeLayout>